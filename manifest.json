{
  "manifest_version": 3,
  "name": "OpenAI crawler",
  "version": "1.0",
  "description": "Copy all visible text on the page.",
  "permissions": [
    "clipboardWrite",
    "tabs",
    "webRequest",
    "storage",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
 
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  }
}