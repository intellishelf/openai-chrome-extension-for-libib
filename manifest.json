{
    "manifest_version": 2,
    "name": "OpenAI crawler",
    "version": "1.0",
    "description": "Copy all visible text on the page.",
    "permissions": ["clipboardWrite", "activeTab"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    }
  }